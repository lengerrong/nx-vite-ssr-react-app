{
  "name": "activate",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/activate/browser"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "ssr-vite-build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/activate/server",
        "ssr": "src/server.ts"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "ssr-webpack-build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "outputPath": "dist/apps/activate/server",
        "main": "apps/activate/src/server.ts",
        "tsConfig": "apps/activate/tsconfig.server.json",
        "target": "node",
        "compiler": "babel",
        "outputHashing": "none",
        "webpackConfig": "@nx/react/plugins/webpack",
        "babelUpwardRootMode": true
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "activate:ssr-webpack-build",
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "activate:ssr-webpack-build:development"
        },
        "production": {
          "buildTarget": "activate:ssr-webpack-build:production"
        }
      }
    },
    "vite-dev-serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "activate:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "activate:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "activate:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "activate:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "activate:build:development"
        },
        "production": {
          "buildTarget": "activate:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/activate"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "coverage/apps/activate"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["./src/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
